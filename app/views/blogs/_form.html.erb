<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Blog</h2>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with(model: blog, local: true) do |form| %>
        <div class='field'>
          <div class='field-label'>
            <%= form.label :title %>
          </div>
          <div class='field-input'>
            <%= form.text_field :title %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= form.label :description %>
          </div>
          <div class='field-input'>
            <%= form.text_area :description %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= form.label :movie %>
          </div>
          <div class='field-input'>
            <%= form.file_field :movie %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= form.label :image %>
          </div>
          <div class='field-input'>
            <%= form.file_field :image %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= form.label :published_at %>
          </div>
          <div class='field-input'>
            <%= form.date_select :published_at %>
          </div>
        </div>
        <div class='actions'>
          <%= form.submit "Create Blog", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
