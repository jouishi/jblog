<p id="notice"><%= notice %></p>
<% if user_signed_in? && current_user.id == @blog.user_id %>
          <div class="prototype__manage">
             <%= link_to "Edit", edit_blog_path(@blog),class: :prototype__btn %>
             <%= link_to "Delete", blog_path(@blog), class: :prototype__btn, method: :delete %>
          </div>
        <% end %>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @blog.description %>
</p>

<p>
  <strong>Movie:</strong>
  <%= video_tag(@blog.movie.to_s, height: "50%", width: "50%",loop: true,autoplay: true,muted: true,controls: true )%>
</p>

<p>
  <strong>Published at:</strong>
  <%= @blog.published_at %>
</p>

<%= link_to 'Back', blogs_path %>
