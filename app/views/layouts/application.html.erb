<!DOCTYPE html>
<html>
  <head>
    <title>JDiary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'custom', media: 'all' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
      

      .navbar.fixed-top {
        position: fixed;
        top: 0;
        right: 0;
        left: 0;
        z-index: 1030;
      }

      .navbar-brand {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
      }

      .container.content {
        margin-top: 80px; 
      }
    </style>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-black fixed-top">
      
      <div class="container">
        <div class="navbar-brand">
        
          <%= link_to root_path do %>
            <%= image_tag("logo.png", alt: "Jblog Logo", width: "70px", height: "70px") %>
          <% end %>
        </div>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
          <li class="nav-item">
          <% if user_signed_in? %>
  <div class="greeting">
  <%= link_to "Hello!", user_path(current_user), class: "greeting__link", style: "color:#FF8C00  !important; font-size: 40px; font-family: 'Arial', cursive;" %>
  <%= link_to "#{current_user.name}!!", user_path(current_user), class: "greeting__link", style: "color: red !important; font-size: 40px; font-family: 'Arial', sans-serif;" %>
</div>
<% end %>
            </li>
           
          </ul>
        </div>

       
        <% if user_signed_in? %>
             <div class="nav__right">
              <li>
              <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: :nav__btn, style: "color: #FF8C00;" %>

                <%= link_to "New Blog", new_blog_path, class: :nav__btn, style: "color: #FF8C00;" %>
              </li>
          <% else %>
          
            <div class="nav__right">
              <%= link_to "Log In", new_user_session_path, class: :nav__btn, style: "color: #FF8C00;" %>

              <%= link_to "Sign Up", new_user_registration_path, class: :nav__btn, style: "color: #FF8C00;"%>
            </div>
        </div>
        <% end %>
      </div>
    </nav>

    <div class="container content">
      <%= yield %>
    </div>
<footer class="footer mt-auto py-3 bg-black">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <p class="mb-0 text-white text-center">Â© JDiary. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>